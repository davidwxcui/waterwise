<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#FFB300"
                android:endColor="#FF8F00"
                android:angle="90" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFF8E1" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#FFC107"
                android:endColor="#FFFFD54F"
                android:angle="90" />
            <corners android:radius="24dp" />
            <stroke
                android:width="1dp"
                android:color="#FFFFF8E1" />
        </shape>
    </item>

</selector>
