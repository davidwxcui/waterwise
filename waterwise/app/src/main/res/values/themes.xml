<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Waterwise" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/solid_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Material3 compatibility colors -->
        <item name="colorPrimaryContainer">@color/solid_blue</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item> <!-- optional, makes icons dark -->
    </style>

    <!-- NumberPicker theme for onboarding -->
    <style name="NumberPickerTheme" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Custom Chip Style for Onboarding -->
    <style name="Widget.App.Chip.Filter" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeColor">@color/solid_blue</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipIconTint">@color/chip_text_color</item>
    </style>
</resources>