<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:paddingBottom="96dp"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <!-- Vertical layout for the texts on the left -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello, Alex!"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/topTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stay hydrated today"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Notification bell on the right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/notifications_24dp"
                    android:contentDescription="Notifications"
                    android:background="@drawable/circle_background"
                    android:padding="5dp"
                    android:scaleType="centerInside"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/gradient_blue_purple"
            android:orientation="vertical"
            android:padding="24dp"
            android:radius="16dp">

            <!-- Top Section: Text and Circular Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Left Text Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Progress"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/progressMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1850ml"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/progressSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of 2500ml goal"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Right Circular Progress -->
                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp">

                    <com.davidwxcui.waterwise.ui.home.ProgressRingView
                        android:id="@+id/progressRing"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/circularProgressPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="74%"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_gravity="center" />

                </FrameLayout>
            </LinearLayout>

            <!-- Bottom Section: Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/ProgressBarValue"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progress="10"
                    android:max="100"
                    android:progressDrawable="@drawable/progress_bar"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/remainingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="350ml remaining"
                    android:textSize="12sp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Quick Add Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quick_add"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <!-- Drinks Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:spacing="12dp">

            <!-- Water -->
            <LinearLayout
                android:id="@+id/btnWater"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_grey_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250ml"
                    android:textSize="10sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Tea -->
            <LinearLayout
