                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Coffee"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150ml"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Juice -->
            <LinearLayout
                android:id="@+id/btnJuice"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_grey_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§ƒ"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juice"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200ml"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Soda -->
            <LinearLayout
                android:id="@+id/btnSoda"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_grey_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥¤"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soda"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="330ml"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <!-- Milk -->
            <LinearLayout
                android:id="@+id/btnMilk"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_grey_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥›"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Milk"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250ml"
                    android:textSize="10sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Yogurt -->
            <LinearLayout
                android:id="@+id/btnYogurt"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_grey_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥›"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yogurt"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200ml"
                    android:textSize="10sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Alcohol -->
            <LinearLayout
                android:id="@+id/btnAlcohol"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_grey_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ·"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alcohol"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150ml"
                    android:textSize="10sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Sparkling -->
            <LinearLayout
                android:id="@+id/btnSparkling"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_grey_bg"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨"
                    android:textSize="32sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sparkling"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250ml"
                    android:textSize="10sp"
                    android:textColor="@color/black" />
            </LinearLayout>

        </GridLayout>

        <!-- Timeline -->
        <TextView
            android:id="@+id/timelineHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/timeline"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/timelineEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_drinks_yet"
            android:padding="8dp"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/timelineList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <!-- Today Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/today_summary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <com.davidwxcui.waterwise.ui.home.SummaryDonutView
                android:id="@+id/donut"
                android:layout_width="72dp"
                android:layout_height="72dp" />

            <TextView
                android:id="@+id/summaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:text="Water 0% - Caffeine 0% - Sugary 0%"
                android:textSize="13sp"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@android:color/white"
            android:elevation="1dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10K Run - D-3"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/eventTip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tip: +300 ml water today"
                android:textSize="13sp"
                android:paddingTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/insightCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:elevation="1dp">

            <TextView
                android:id="@+id/insightText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Suggested now: +250 ml Water" />

            <Button
                android:id="@+id/insightWhy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/why"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
