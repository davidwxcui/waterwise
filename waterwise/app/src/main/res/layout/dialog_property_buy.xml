<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_game">

    <!-- 标题 + 图标 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPropertyIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_coin"
            android:contentDescription="@null"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/tvDialogTitleProp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buy Property?"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 属性名称 -->
    <TextView
        android:id="@+id/tvPropName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Property name"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- 价格 -->
    <TextView
        android:id="@+id/tvPropPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Price: 0"
        android:textColor="#E0FFFFFF"
        android:textSize="14sp" />

    <!-- 收益 -->
    <TextView
        android:id="@+id/tvPropIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Income per turn: 0"
        android:textColor="#E0FFFFFF"
        android:textSize="14sp" />

    <!-- 玩家金币 -->
    <TextView
        android:id="@+id/tvPropCoins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Your coins: 0"
        android:textColor="#FFFFFFFF"
        android:textSize="14sp" />

    <!-- 底部按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnBuyProp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Buy"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bg_roll_button"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/btnSkipProp"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Skip"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/bg_roll_button"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>
