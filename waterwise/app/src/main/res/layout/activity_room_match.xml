<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roomRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:background="@drawable/bg_game_root">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 顶部标题 -->
        <TextView
            android:id="@+id/tvTitleMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Online Room"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <!-- UID 展示卡片 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_hud_panel"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID: -"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- 创建 / 加入房间区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_event_panel"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create or join a room with friends."
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Room ID -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room ID"
                android:textColor="#E0FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etRoomId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter room ID to join"
                android:inputType="text"
                android:background="@drawable/bg_input_game"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- Password -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room password"
                android:textColor="#E0FFFFFF"
                android:textSize="13sp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Optional, leave empty if none"
                android:inputType="textPassword"
                android:background="@drawable/bg_input_game"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnCreateRoom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Create Room"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_roll_button"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnJoinRoom"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Join Room"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/bg_roll_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Back"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:background="@drawable/bg_roll_button"
            android:textColor="@android:color/white"
            android:layout_marginTop="12dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
