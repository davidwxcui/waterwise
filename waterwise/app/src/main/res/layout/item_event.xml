<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:clipToPadding="false"
    android:clipChildren="false">

    <!-- Delete Button (Hidden behind, revealed on swipe) -->
    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@drawable/delete_background">

        <!-- Visual Delete Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/outline_auto_delete_24"
                android:contentDescription="Delete event"
                android:layout_marginBottom="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Clickable Button (Invisible, overlays the visual content) -->
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:text="" />
    </FrameLayout>

    <!-- Event Card (Front) - corners removed on swipe edge -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="4dp"
        app:strokeColor="#E8E8E8"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Days Badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="14dp">

                <TextView
                    android:id="@+id/eventTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/daysUntil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="5 days"
                    android:textColor="#9C5DD4"
                    android:textSize="14sp"
                    app:chipBackgroundColor="#F3E8FF"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="24dp" />
            </LinearLayout>

            <!-- Date -->
            <TextView
                android:id="@+id/eventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#7D8BA3"
                android:layout_marginBottom="10dp"
                android:textStyle="bold" />

            <!-- Description -->
            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#3D4456"
                android:layout_marginBottom="14dp"
                android:lineSpacingMultiplier="1.3" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E8E8E8"
                android:layout_marginVertical="12dp" />

            <!-- Recommendation Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’§ Hydration Tips"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#9C5DD4"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/eventRecommendation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#3D4456"
                    android:lineSpacingMultiplier="1.3" />
            </LinearLayout>

            <!-- Recommended Amount Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/recommended_amount_bg"
                android:padding="14dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended:"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#9C5DD4"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/eventRecommendedAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</com.daimajia.swipe.SwipeLayout>