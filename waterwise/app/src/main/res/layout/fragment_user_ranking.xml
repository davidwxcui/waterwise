<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Repeated water background filling the screen -->
    <LinearLayout
        android:id="@+id/bgContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bg_water_ranking_board"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bg_water_ranking_board"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bg_water_ranking_board"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/bg_water_ranking_board"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <!-- Foreground scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/rankingScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header + subtitle + my card + tabs on top of background -->
            <LinearLayout
                android:id="@+id/headerContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#80FFFFFF"
                android:padding="16dp"
                android:layout_marginBottom="16dp">

                <!-- Header row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Back button -->
                    <ImageButton
                        android:id="@+id/btnBackRanking"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_media_previous"
                        android:contentDescription="Back" />

                    <!-- Screen title -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Daily Water Ranking"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- Leaderboard icon (optional) -->
                    <ImageView
                        android:id="@+id/rankingIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_leaderboard"
                        android:contentDescription="Ranking icon" />
                </LinearLayout>

                <!-- Subtitle / description -->
                <TextView
                    android:id="@+id/rankingSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today Â· Compare your water intake with friends"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="12dp" />

                <!-- My ranking card (no avatar, show user ID) -->
                <LinearLayout
                    android:id="@+id/myRankCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="#CCFFFFFF"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- My rank number -->
                    <TextView
                        android:id="@+id/myRankNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />

                    <!-- User info: ID + today intake -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <!-- User ID -->
                        <TextView
                            android:id="@+id/myUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: 123456"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <!-- Today water intake -->
                        <TextView
                            android:id="@+id/myAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1850 ml today"
                            android:textColor="#666666"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- Completion percent -->
                    <TextView
                        android:id="@+id/myPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="74%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Range tabs: Today / 7 days / 30 days -->
                <LinearLayout
                    android:id="@+id/rangeTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tabToday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Today"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tab7Days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7 Days"
                        android:textSize="14sp"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tab30Days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="30 Days"
                        android:textSize="14sp"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Friends leaderboard title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends leaderboard"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp" />

            <!-- Empty state text -->
            <TextView
                android:id="@+id/rankingEmpty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No ranking data yet"
                android:textSize="13sp"
                android:textColor="#999999"
                android:padding="8dp"
                android:visibility="gone" />

            <!-- Leaderboard list -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rankingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>
