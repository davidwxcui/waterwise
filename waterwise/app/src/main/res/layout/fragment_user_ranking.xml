<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rankingScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- 整个排行榜的大卡片，样式跟 Personal Information 一样 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rankingCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 顶部标题行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- 返回按钮 -->
                    <ImageButton
                        android:id="@+id/btnBackRanking"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@android:drawable/ic_media_previous"
                        android:contentDescription="Back" />

                    <!-- 标题 -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Daily Water Ranking"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1E2A3A" />

                    <!-- 排行榜图标 -->
                    <ImageView
                        android:id="@+id/rankingIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_leaderboard"
                        android:contentDescription="Ranking icon" />
                </LinearLayout>

                <!-- 副标题 -->
                <TextView
                    android:id="@+id/rankingSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today · Compare your water intake with friends"
                    android:textSize="13sp"
                    android:textColor="#7A8A9A"
                    android:layout_marginBottom="12dp" />

                <!-- 我的排名小卡片 -->
                <LinearLayout
                    android:id="@+id/myRankCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:background="#F7F8FF"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- 排名号 -->
                    <TextView
                        android:id="@+id/myRankNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#1"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1E2A3A" />

                    <!-- ID + 今日喝水 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/myUserId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ID: 123456"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#1E2A3A" />

                        <TextView
                            android:id="@+id/myAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1850 ml today"
                            android:textColor="#7A8A9A"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <!-- 完成百分比 -->
                    <TextView
                        android:id="@+id/myPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="74%"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1E2A3A" />
                </LinearLayout>

                <!-- 时间范围 Tabs -->
                <LinearLayout
                    android:id="@+id/rangeTabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:id="@+id/tabToday"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Today"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tab7Days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="7 Days"
                        android:textSize="14sp"
                        android:padding="8dp" />

                    <TextView
                        android:id="@+id/tab30Days"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="30 Days"
                        android:textSize="14sp"
                        android:padding="8dp" />
                </LinearLayout>

                <!-- Friends leaderboard title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friends leaderboard"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#1E2A3A"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <!-- 空数据提示 -->
                <TextView
                    android:id="@+id/rankingEmpty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No ranking data yet"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:padding="8dp"
                    android:visibility="gone" />

                <!-- 排行列表 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rankingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 底部留点空白，避免被导航栏挡住 -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
