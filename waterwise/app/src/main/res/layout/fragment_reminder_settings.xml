<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/content_desc_go_back"
            android:layout_marginEnd="8dp"/>

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_settings"
                    android:textStyle="bold"
                    android:textSize="22sp"
                    android:textColor="#1E2A3A"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reminder_description"
                    android:textSize="13sp"
                    android:textColor="#7A8A9A"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Mode Selection Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="2dp">

            <RadioGroup
                android:id="@+id/radioGroupMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RadioButton
                    android:id="@+id/radioInterval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/interval_mode"
                    android:textSize="16sp"
                    android:textColor="#1E2A3A"
                    android:paddingVertical="8dp"/>

                <RadioButton
                    android:id="@+id/radioCustomTimes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/custom_times_mode"
                    android:textSize="16sp"
                    android:textColor="#1E2A3A"
                    android:paddingVertical="8dp"/>
            </RadioGroup>
        </com.google.android.material.card.MaterialCardView>

        <!-- Mode Container (switches between interval and custom times) -->
        <FrameLayout
            android:id="@+id/modeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- Interval Mode Layout -->
            <include
                android:id="@+id/layoutIntervalMode"
                layout="@layout/layout_interval_mode"
                android:visibility="visible"/>

            <!-- Custom Times Layout -->
            <include
                android:id="@+id/layoutCustomTimes"
                layout="@layout/layout_custom_times"
                android:visibility="gone"/>
        </FrameLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="@string/save_settings"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_gradient"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

